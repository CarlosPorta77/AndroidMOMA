<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.ArtActivity"
    android:orientation="vertical"
    android:layout_gravity="top"
    android:gravity="top">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/imageview_landing2"
        android:src="@drawable/moma2"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:id="@+id/imageview_user"
            android:layout_weight="30"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="70"
            android:gravity="center"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="Bienvenido a MomApp"/>
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textAlignment="center"
                 android:textSize="20dp"
                 android:textColor="#010c54"
                 android:id="@+id/textview_user_info"/>

        </LinearLayout>

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:gravity="center">

    <Button
        android:text="Ver Obras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_show_paints"/>
    <Button
        android:text="Log out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_logout"/>

    <Button
        android:text="FOTO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_take_picture"/>

    <Button
        android:text="CHAT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_chat"/>

</LinearLayout>


</LinearLayout>
